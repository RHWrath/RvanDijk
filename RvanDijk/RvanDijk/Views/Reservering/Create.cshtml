@model RvanDijk.Models.VMReservering

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>VMReservering</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KlantNaam" class="control-label"></label>
                @Html.DropDownList("KlantNaam", ViewBag.Klanten, "KlantNaam", new {@class = "form-Control"})
                <span asp-validation-for="KlantNaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tijd_Datum" class="control-label"></label>
                <input asp-for="Tijd_Datum" class="form-control" value="@DateTime.Now"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar Reservatie Pagina</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
